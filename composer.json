{
    "name": "rteeom/isoflags",
    "description": "library for easy emoji flags generation from iso country codes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rteeom",
            "email": "mainstreamer@outlook.com"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "Rteeom\\FlagsGenerator\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "ext-json": "*",
        "vimeo/psalm": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.92",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "php -d pcov.enabled=1 phpunit --coverage-html coverage/html --coverage-text",
        "psalm": "psalm --no-cache",
        "psalm:baseline": "psalm --set-baseline=psalm-baseline.xml",
        "cs:check": "php-cs-fixer check --diff --verbose",
        "cs:fix": "php-cs-fixer fix --verbose",
        "phpcs": "phpcs src/ tests/ --standard=phpcs.xml.dist",
        "phpcbf": "phpcbf src/ tests/ --standard=phpcs.xml.dist",
        "qa": [
            "@test",
            "@psalm",
            "@cs:check",
            "@phpcs"
        ]
    }
}
